<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example1.project.MainActivity"
    android:background="@drawable/mf2" >

    

    <Button
        android:id="@+id/user_profile_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/logout_button"
        android:layout_alignEnd="@+id/create_event_button"
        android:layout_alignRight="@+id/create_event_button"
        android:layout_alignLeft="@+id/create_event_button"
        android:layout_alignStart="@+id/create_event_button"
        android:layout_marginBottom="19dp"
        android:text="@string/profile_button"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="30sp" />

    <Button
        android:id="@+id/create_event_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/user_profile_button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:textStyle="bold"
        android:text="@string/create_event_button"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <Button
        android:id="@+id/current_event_display_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/create_event_button"
        android:layout_alignRight="@+id/create_event_button"
        android:layout_alignLeft="@+id/delete_button"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/create_event_button"
        android:layout_marginBottom="17dp"
        android:textStyle="bold"
        android:text="@string/current_event_button"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <Button
        android:id="@+id/delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_above="@+id/current_event_display_button"
        android:layout_alignEnd="@+id/create_event_button"
        android:layout_alignRight="@+id/create_event_button"
        android:layout_alignLeft="@+id/logout_button"
        android:layout_alignStart="@+id/create_event_button"
        android:layout_marginBottom="16dp"
        android:text="Delete Events"
        android:textColor="#ffffff"
        android:textSize="30sp" />
    
    
    <Button
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/delete_button"
        android:layout_alignEnd="@+id/create_event_button"
        android:textStyle="bold"
        android:layout_alignRight="@+id/create_event_button"
        android:layout_alignLeft="@+id/user_profile_button"
        android:layout_alignStart="@+id/create_event_button"
        android:layout_marginBottom="16dp"
        android:text="Logout"
        android:textColor="#ffffff"
        android:textSize="30sp" />

</RelativeLayout>